package org.example;

import java.awt.image.BufferedImage;

public class GrayscaleEffect {

    public static BufferedImage applyGrayscale(BufferedImage original) {

        int width = original.getWidth();
        int height = original.getHeight();

        BufferedImage grayscaleImage = new BufferedImage(width, height, BufferedImage.TYPE_INT_ARGB);

        for (int y = 0; y < height; y++) {
            for (int x = 0; x < width; x++) {

                int rgb = original.getRGB(x, y);

                int alpha=(rgb>>24)&original.getRGB(x,y);
                int red = (rgb >> 16) & 0xFF;
                int green = (rgb >> 8) & 0xFF;
                int blue = rgb & 0xFF;
                int gray = (red + green + blue) / 3;

                int newRGB = (alpha<<24|gray << 16) | (gray << 8) | gray;
                grayscaleImage.setRGB(x, y, newRGB);
            }
        }

        return grayscaleImage;
    }
}
