package org.example;

import java.awt.image.BufferedImage;

public class ImagePixelator {

    public  static BufferedImage pixelate(BufferedImage image, int pixelSize) {
        int width = image.getWidth();
        int height = image.getHeight();

        BufferedImage pixelatedImage = new BufferedImage(width, height, image.getType());

        for (int y = 0; y < height; y += pixelSize) {
            for (int x = 0; x < width; x += pixelSize) {
                int pixelColor = image.getRGB(x, y);

                for (int z = 0; z < pixelSize; z++) {
                    for (int dx = 0; dx < pixelSize; dx++) {
                        if (x + dx < width && y + z < height) {
                            pixelatedImage.setRGB(x + dx, y + z, pixelColor);
                        }
                    }
                }
            }
        }

        return pixelatedImage;
    }
}
